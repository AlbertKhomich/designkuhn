<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto text-center mt-5">
                <p class="custom-p-small mt-5">
                    <% if (sectionTitleContact) { %>
                        KONTAKTE
                </p>
                <% } %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mx-auto text-center mt-5">
                <h2 class="custom-h2 mb-5 animated-text">Setzen Sie sich mit mir in
                    Verbindung
                </h2>
            </div>
        </div>
    </div>
    <div class="container mt-5 custom-mb">
        <div class="row justify-content-md-center">
            <div class="col-12 col-sm-6 col-lg-4 text-center text-sm-start">
                <h3 class="custom-h2-small">TELEFON</h3>
                <p class="custom-p-small">Stationär: 05253 – 9738062 <br>
                    Mobil: 01525 – 6544525</p>
                <br>
                <h3 class="custom-h2-small">EMAIL</h3>
                <p class="custom-p-small">info@designkuhn.de</p>
                <br>
                <h3 class="custom-h2-small">ADRESS UND ZEITPLAN</h3>
                <p class="custom-p-small">Pyrmonter str. 20, 33014 Bad Driburg</p>
                <p class="custom-p-small">Die 9:00 - 12:00 Uhr <br>
                    Don 9:00 - 12:00 Uhr <br>
                    und nach Vereinbarung</p>
            </div>
            <div class="col-12 col-sm-6 col-lg-4 mt-5 mt-sm-0">
                <h3 class="custom-h2-small text-center text-sm-start mb-5 mb-sm-0">STELLEN
                    SIE
                    <br>
                    BELIEBIGE FRAGEN
                </h3>
                <% if (successMessage) { %>
                    <div id="successAlert" class="alert alert-success" role="alert">
                        <%= successMessage %>
                    </div>
                    <% } %>
                        <% if (errors && errors.length> 0) { %>
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    <% errors.forEach(error=> { %>
                                        <li>
                                            <%= error.msg %>
                                        </li>
                                        <% }); %>
                                </ul>
                            </div>
                            <% } %>
                                <form class="custom-form" action="/send-email" method="POST" id="contactForm">
                                    <div class="mb-3">
                                        <label for="inputName" class="form-label custom-p-small custom-bold">Name <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control custom-input" id="inputName"
                                            name="inputName" value="<%= inputName || '' %>" aria-describedby="nameHelp"
                                            required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputEmail" class="form-label custom-p-small custom-bold">Email
                                            address <span class="text-danger">*</span></label>
                                        <input type="email" class="form-control custom-input" id="inputEmail"
                                            name="inputEmail" value="<%= inputEmail || '' %>"
                                            aria-describedby="emailHelp" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputTel" class="form-label custom-p-small custom-bold">Telefon
                                            <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control custom-input" id="inputTel"
                                            name="inputTel" value="<%= inputTel || '' %>" aria-describedby="telHelp"
                                            required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputKomm"
                                            class="form-label custom-p-small custom-bold">Kommentare</label>
                                        <textarea type="text" class="form-control custom-input" id="inputKomm"
                                            name="inputKomm" rows="1"
                                            aria-describedby="kommHelp"><%= inputKomm || '' %></textarea>
                                    </div>
                                    <div class="text-center">
                                        <div class="elliptical-link-container text-center mt-5">
                                            <div class="ellipse ellipse-second"></div>
                                            <div class="ellipse ellipse-btn" id="submitFormBtn"></div>
                                            <a class="custom-p elliptical-link" id="submitFormLink"
                                                href="http://"><b>Senden</b></a>
                                        </div>
                                    </div>
                                </form>
            </div>
        </div>
    </div>
</section>